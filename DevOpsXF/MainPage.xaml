<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DevOpsXF"
             x:Class="DevOpsXF.MainPage" Title="MainPage">

	<StackLayout 
		VerticalOptions="Center" 
		HorizontalOptions="Center">
		<Label Text="Enter nummber of Euros (EUR)"  />
		<StackLayout Orientation="Horizontal">
			<Entry Placeholder="0" Keyboard="Numeric" AutomationId="ValueEntry" x:Name="ValueEntry" WidthRequest="60"/>
			<Label Text="EUR" VerticalOptions="Center"/>
		</StackLayout>
		<Button Text="Calculate" Clicked="CalculateOnClicked"/>
	</StackLayout>

</ContentPage>
